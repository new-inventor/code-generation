{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "removeComments": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@root/*": ["src/*"],
      "@root": ["src/"],
    },
    "allowUnreachableCode": false,
    "allowUnusedLabels": false
  }
}
